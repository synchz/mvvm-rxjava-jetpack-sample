<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_grad"
        tools:context=".ui.citySelection.CitySelectionActivity">

    <ImageView
            android:id="@+id/backBtn"
            android:src="@drawable/ic_back"
            android:layout_width="30dp"
            android:layout_height="30dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:textStyle="bold"
            android:text="@string/select_a_city"
            android:textSize="@dimen/textSize"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="@+id/backBtn"
            app:layout_constraintBottom_toBottomOf="@+id/backBtn"
            android:layout_marginStart="0dp"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="0dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <AutoCompleteTextView
            android:textColorHint="@color/whiteTrans"
            android:hint="@string/enter_city_name"
            android:textColor="@color/white"
            android:backgroundTint="@color/whiteTrans"
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            app:layout_constraintHorizontal_bias="0.041" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/backBtn"
            android:id="@+id/editText" app:layout_constraintEnd_toStartOf="@+id/next"/>
    <ImageView
            android:id="@+id/next"
            android:src="@drawable/ic_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="18dp" app:layout_constraintTop_toTopOf="@+id/editText"
            app:layout_constraintBottom_toBottomOf="@+id/editText"/>

    <ProgressBar
            android:visibility="gone"
            android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:id="@+id/progress" app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:visibility="gone"
            android:id="@+id/loadTV"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/textSize"
            android:text="@string/loading_available_cities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/progress" app:layout_constraintStart_toStartOf="@+id/progress"
            app:layout_constraintEnd_toEndOf="@+id/progress" android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.51"/>

</androidx.constraintlayout.widget.ConstraintLayout>