<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.weatherForecast.ForecastActivity">
    <androidx.core.widget.NestedScrollView
            android:background="@drawable/bg_grad"
            android:fillViewport="true"
            android:layout_width="match_parent"
                                           android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content">
    <TextView
            android:id="@+id/cityName"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:text="Sample City"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/next"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"/>
    <ImageView
            android:id="@+id/next"
            android:src="@drawable/ic_next_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/cityName"
            app:layout_constraintStart_toEndOf="@+id/cityName"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="@+id/cityName"/>
    <TextView
            android:id="@+id/time"
            android:textColor="@color/whiteTrans"
            android:textSize="16dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cityName" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:id="@+id/currentIV"
            android:scaleType="fitXY"
            android:layout_width="100dp"
            android:layout_height="100dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/cityName" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:id="@+id/currentTemp"
            android:textStyle="bold"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/currentIV"
            app:layout_constraintEnd_toEndOf="@+id/currentIV" app:layout_constraintStart_toStartOf="@+id/currentIV"
            android:layout_marginTop="24dp"/>
    <TextView
            android:id="@+id/currentMinTemp"
            android:layout_marginEnd="20dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/currentMaxTemp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/currentMaxTemp"/>
    <TextView
            android:id="@+id/currentMaxTemp"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/currentTemp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/currentMinTemp"/>
    <TextView

            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/currentMaxTemp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.5" android:id="@+id/textView"/>
    <View
            android:background="@color/whiteTrans"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="18dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="18dp" android:id="@+id/view"/>
    <HorizontalScrollView
            app:layout_constraintTop_toBottomOf="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/horizontalScrollView">
        <LinearLayout
                android:layout_marginTop="18dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        >
            <include android:id="@+id/one"
                     layout="@layout/item_future"/>
            <include android:id="@+id/two"
                     layout="@layout/item_future"/>
            <include android:id="@+id/three"
                     layout="@layout/item_future"/>
            <include android:id="@+id/four"
                     layout="@layout/item_future"/>
            <include android:id="@+id/five"
                     layout="@layout/item_future"/>
        </LinearLayout>
    </HorizontalScrollView>
    <ProgressBar
            android:id="@+id/pb0"
            android:layout_width="50dp" android:layout_height="50dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cityName" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <ProgressBar
            android:id="@+id/pb1"
            android:layout_width="50dp" android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@+id/horizontalScrollView"
            app:layout_constraintBottom_toBottomOf="@+id/horizontalScrollView"
            app:layout_constraintEnd_toEndOf="@+id/horizontalScrollView"
            app:layout_constraintStart_toStartOf="@+id/horizontalScrollView"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout
 >